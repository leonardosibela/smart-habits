<resources>

    <style name="Theme.SmartHabits" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:windowBackground">@color/window_color</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="TextAppearance.RecyclerViewMessage" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">24sp</item>
        <item name="android:alpha">.54</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name="Widget.Material3.TextInputLayout.FilledBox.Dense.SmartHabits">
        <item name="boxStrokeColor">@color/colorSecondary</item>
        <item name="hintTextColor">@color/colorSecondary</item>
        <item name="colorControlActivated">@color/colorSecondary</item>
        <item name="errorTextColor">@color/errorColor</item>
        <item name="errorIconTint">@color/errorColor</item>
        <item name="boxStrokeErrorColor">@color/errorColor</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@color/colorSecondary</item>
        <item name="colorControlActivated">@color/colorSecondary</item>
        <item name="colorControlHighlight">@color/colorSecondary</item>
    </style>
</resources>